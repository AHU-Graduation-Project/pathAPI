{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",   // The root directory for source code
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",           // Include all source code files
    "tests/**/*"          // Include all test files
  ],
  "exclude": ["node_modules"]
}

